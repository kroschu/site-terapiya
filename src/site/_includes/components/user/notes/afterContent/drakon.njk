<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title | safe }}</title>
    <meta name="description" content="{{ description | safe }}" />
    
    <!-- Вказуємо шляхи до стилів -->
    <link rel="stylesheet" href="/styles/reset.css" />
    <link rel="stylesheet" href="/styles/main.css" />

    <!-- Інші ваші стилі та скрипти -->
</head>
<body>

    <!-- DrakonWidget вставка внизу сторінки -->
    <div id="drakon-container" style="width: 100%; height: 500px;"></div> <!-- Додаємо стилі -->

    <!-- Підключаємо необхідні скрипти -->
    <script src="/libs/drakonwidget.js"></script>
    <script src="/libs/mousetrap.min.js"></script>
    <script src="/libs/simplewidgets.js"></script>
    <script src="/js/examples.js"></script>
    <script src="/js/themes.js"></script>
    <script src="/js/main.js"></script>

    <!-- Ініціалізація DrakonWidget -->
    <script>
        DrakonWidget.create({
            element: document.getElementById("drakon-container"),
            diagram: {
                nodes: [
                    { id: 1, text: "Start", type: "begin" },
                    { id: 2, text: "Do something", type: "action", next: 3 },
                    { id: 3, text: "End", type: "end" }
                ]
            },
            options: {
                editable: true
            }
        });
    </script>
</body>
</html>