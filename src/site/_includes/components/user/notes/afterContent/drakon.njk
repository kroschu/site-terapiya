<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title | safe }}</title>
    <meta name="description" content="{{ description | safe }}" />
    
    <!-- Вказуємо шляхи до стилів -->
    <link rel="stylesheet" href="/styles/reset.css" />
    <link rel="stylesheet" href="/styles/main.css" />

    <!-- Інші ваші стилі та скрипти -->
</head>
<body>
    <!-- Ваш основний контент сторінки -->
    <div id="content">
        {{ content | safe }}
    </div>

    <!-- DrakonWidget вставка внизу сторінки -->
    <div id="drakon-container"></div>
    
    <!-- Підключаємо необхідні скрипти -->
    <script src="/libs/drakonwidget.js"></script>
    <script src="/libs/mousetrap.min.js"></script>
    <script src="/libs/simplewidgets.js"></script>
    <script src="/libs/rounded.js"></script>
    <script src="/js/examples.js"></script>
    <script src="/js/themes.js"></script>
    <script src="/js/main.js"></script>

    <!-- Ініціалізація DrakonWidget -->
    <script>
        DrakonWidget.create({
            element: document.getElementById("drakon-container"),
            diagram: {
                /* JSON для вашої діаграми, або залиште пустим для створення нової */
            },
            options: {
                editable: true
            }
        });
    </script>
</body>
</html>